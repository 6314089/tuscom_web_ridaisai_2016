.single-logo
  display block
  position absolute
  top 5vh
  left 10%
  max-width 50%
  width 30vh
  height auto
  z-index 1
  img
    width 100%
    height auto
main-arrow(direction)
  position absolute
  top 0
  bottom 0
  {direction} 0
  margin auto
  width 7vw
  height 20vh
  z-index 2
  img
    width 100%
    height 100%
.main-left-arrow
  main-arrow(left)
.main-right-arrow
  main-arrow(right)

.single
  position absolute
  top 7vh
  left 0
  right 0
  margin 0 auto
  width 70%
  height 80vh
  box-sizing border-box
  padding 20px
  background alpha(#cb5d6a, 0.6)
  box-shadow 0 15px alpha(#402925, 0.6), 0 30px alpha(#411c2e, 0.6)
  display flex
  align-items center
  & > img
    width 40%
    height auto

.inner-single
  height 100%
  overflow-y scroll
  img
    display block
    width 80%
    height auto
    margin-top 20px
    margin-bottom 20px
    margin-left auto
    margin-right auto
  h1
    font-size 2rem
  p
    width 80%
    margin auto
    font-size 1.2rem
    margin-bottom 1rem
