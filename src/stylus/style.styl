// main

#main
  width 100%
  max-width 1600px
  height 100%
  margin 0 auto
  position relative


//#########################################################
// footer

footer
  width 100%
  height 8vh
  color rgba(255, 255, 255, 0.7)
  background #090404
  position fixed
  bottom 0

  display flex
  justify-content space-between
  align-items center

  & > a
    font-size 4vh
    color rgba(255, 255, 255, 0.7)
    text-decoration none
    display block
    margin-left 2%

  address
    margin-right 2%

    & > a
      color alpha(#6197a6, 0.8)


//#########################################################
// cover

@keyframes down-in
  0%
    transform translateY(-100%)
  100%
    transform translateY(0)

cover-base()
  position absolute
  width 100%
  height 100%
  transform translateY(-100%)
cover(color1, color2, color3)
  cover-base()
  z-index 1
  background-color color1
  &::before
  &::after
    cover-base()
    content " "
    z-index -1
  &::before
    background-color color2
  &::after
    background-color color3
cover1-anim-in(classname, anim-name)
  &.{classname}
    animation 0.5s ease 0s 1 both anim-name
    &::before
      animation 0.5s ease 0.15s 1 both anim-name
    &::after
      animation 0.5s ease 0.25s 1 both anim-name
cover2-anim-in(classname,anim-name)
  .{classname} &
    animation 0.5s ease 0.35s 1 both anim-name
    &::before
      animation 0.5s ease 0.45s 1 both anim-name
    &::after
      animation 0.5s ease-in-out 0.55s 1 both anim-name

#cover1
  cover #411c2e #cb5d6a #402925
  cover1-anim-in down-in down-in
#cover2
  overflow hidden
  cover #f0831e #6197a6 #85a029
  cover2-anim-in down-in down-in

@keyframes now-loading
  0%
    opacity 0
    transform translateY(10vh)
  100%
    opacity 1
    transform translateY(0)
@keyframes loader
  0%
    transform rotateZ(0)
  100%
    transform rotateZ(360deg)
#now-loading
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  width 40vh
  max-width 80vw
  height auto
  display block
  margin auto
  animation 0.8s ease-out 0s infinite alternate now-loading
#loader
  position absolute
  top 10vh
  left 30%
  width auto
  height 120vw
  min-height 160vh
  display block
  opacity 0.4
  animation 2.4s ease 0s infinite normal loader


