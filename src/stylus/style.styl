//#########################################################
// cover

anim-cover-down-in(delay, timing-func = ease)
  animation-name down-in
  animation-duration 0.5s
  animation-timing-function timing-func
  animation-delay (delay)s
  animation-fill-mode both
@keyframes down-in
  0%
    transform translateY(-100%)
  100%
    transform translateY(0)

cover-base()
  position absolute
  width 100%
  height 100%
  transform translateY(-100%)
cover(color1, color2, color3)
  cover-base()
  z-index 1
  background-color color1
  &::before
  &::after
    cover-base()
    content " "
    z-index -1
  &::before
    background-color color2
  &::after
    background-color color3
cover1-anim(classname, anim-name)
  &.{classname}
    anim-name 0
    &::before
      anim-name 0.15
    &::after
      anim-name 0.25
cover2-anim(classname,anim-name)
  .{classname} &
    anim-name 0.35
    &::before
      anim-name 0.45
    &::after
      anim-name 0.55 ease-in-out

#cover1
  cover #411c2e #cb5d6a #402925
  cover1-anim down-in anim-cover-down-in
#cover2
  cover #f0831e #6197a6 #85a029
  cover2-anim down-in anim-cover-down-in


