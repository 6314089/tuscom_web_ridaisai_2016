html, body
  width: 100%
  height: 100%
  margin: 0

body
  background-image: url("./img/background.svg")
  background-size: cover


//#########################################################
// main

#main
  width: 100%
  max-width: 1600px
  height: 100%
  margin: 0 auto
  position: relative


//#########################################################
// footer

footer
  width: 100%
  height: 8vh
  color: rgba(255, 255, 255, 0.7)
  background: #090404
  position: fixed
  bottom: 0

  display: flex
  justify-content: space-between
  align-items: center

  & > a
    font-size: 4vh
    color: rgba(255, 255, 255, 0.7)
    text-decoration: none
    display: block
    margin-left: 2%

  address
    margin-right: 2%

    & > a
      color: alpha(#6197a6, 0.8)


//#########################################################
// cover

#cover1
  position: absolute
  width: 100%
  height: 100%
  z-index: 1
  background-color: #411c2e
  transform: translateY(-100%)
  &::before
  &::after
    content: " "
    position: absolute
    width: 100%
    height: 100%
    z-index: -1
    transform: translateY(-100%)
  &::before
    background-color: #cb5d6a
  &::after
    background-color: #402925

#cover2
  position: absolute
  width: 100%
  height: 100%
  background-color: #f0831e
  transform: translateY(-100%)
  &::before
  &::after
    content: " "
    position: absolute
    width: 100%
    height: 100%
    z-index: -1
    transform: translateY(-100%)
  &::before
    background-color: #6197a6
  &::after
    background-color: #85a029


#cover1.down-in
  animation-name: down-in
  animation-duration: 0.5s
  animation-timing-function: ease
  animation-fill-mode: both
  &::before
    animation-name: down-in
    animation-duration: 0.5s
    animation-timing-function: ease
    animation-delay: 0.15s
    animation-fill-mode: both
  &::after
    animation-name: down-in
    animation-duration: 0.5s
    animation-timing-function: ease
    animation-delay: 0.25s
    animation-fill-mode: both

.down-in #cover2
  animation-name: down-in
  animation-duration: 0.5s
  animation-timing-function: ease
  animation-delay: 0.35s
  animation-fill-mode: both
  &::before
    animation-name: down-in
    animation-duration: 0.5s
    animation-timing-function: ease
    animation-delay: 0.45s
    animation-fill-mode: both
  &::after
    animation-name: down-in
    animation-duration: 0.5s
    animation-timing-function: ease-in-out
    animation-delay: 0.55s
    animation-fill-mode: both

@keyframes down-in
  0%
    transform: translateY(-100%)
  100%
    transform: translateY(0)


